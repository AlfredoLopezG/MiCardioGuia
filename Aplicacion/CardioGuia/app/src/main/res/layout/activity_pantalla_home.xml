<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel_alfredo.cardioguia.PantallaHome"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imgbtnalarmamedicamentos"
            android:background="@drawable/btnalarmamedicamentos" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imgbtnalarmatomarpresion"
            android:background="@drawable/btnalarmapresion" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imgbtnmediciones"
                android:background="@drawable/btnmediciones"
                android:layout_weight="1
                "
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imgbtnhta"
                android:background="@drawable/btnhta"
                android:layout_weight="1"

                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgbtnvideos"
                    android:background="@drawable/btnvideos"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:id="@+id/imgcorazon"
                android:background="@drawable/corazon"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgbtntips"
                    android:background="@drawable/btntips"
                    android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgbtnbuencomer"
                    android:background="@drawable/btnbuencomer"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp" />
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgbtnbuenejercicio"
                    android:background="@drawable/btnbuenejercicio"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
    </LinearLayout>

</RelativeLayout>
