<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel_alfredo.cardioguia.PantallaHome"
    android:background="@drawable/fondo"
    >


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgbtnmediciones"
        android:background="@drawable/btnmediciones"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="50dp" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgbtnhta"
        android:background="@drawable/btnhta"
        android:layout_alignTop="@+id/imgbtnmediciones"
        android:layout_toRightOf="@+id/imgbtnmediciones"
        android:layout_toEndOf="@+id/imgbtnmediciones"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgbtnvideos"
        android:background="@drawable/btnvideos"
        android:layout_below="@+id/imgbtnmediciones"
        android:layout_toLeftOf="@+id/imgbtnhta"
        android:layout_toStartOf="@+id/imgbtnhta"
        android:layout_marginTop="25dp" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgbtntips"
        android:background="@drawable/btntips"
        android:layout_alignTop="@+id/imgbtnvideos"
        android:layout_alignLeft="@+id/imgbtnhta"
        android:layout_alignStart="@+id/imgbtnhta" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgcorazon"
        android:background="@drawable/corazon"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@+id/imgbtntips"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgbtnbuencomer"
        android:background="@drawable/btnbuencomer"
        android:layout_below="@+id/imgbtnvideos"
        android:layout_alignLeft="@+id/imgbtnvideos"
        android:layout_alignStart="@+id/imgbtnvideos"
        android:layout_marginTop="27dp" />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgbtnbuenejercicio"
        android:background="@drawable/btnbuenejercicio"
        android:layout_alignTop="@+id/imgbtnbuencomer"
        android:layout_alignLeft="@+id/imgbtntips"
        android:layout_alignStart="@+id/imgbtntips" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imgbtnalarmamedicamentos"
            android:background="@drawable/btnalarmamedicamentos" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imgbtnalarmatomarpresion"
            android:background="@drawable/btnalarmapresion" />
    </LinearLayout>

</RelativeLayout>
